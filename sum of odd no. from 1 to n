import java.util.Scanner;
public class sumOddNum {
	public static void main(String[]args) {
		Scanner sc = new Scanner(System.in);
		System.out.print("Enter the value of n: ");
		int n = sc.nextInt();
		int sum = 0;
		for(int i=1;i<=n;i=i+2) {
			sum = sum + i;
			
			
		}
		System.out.print("sum is : "+sum);
		sc.close();
		
	}

}
